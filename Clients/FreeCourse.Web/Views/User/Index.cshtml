@{
    ViewData["Title"] = "Index";
}
@model UserViewModel

<div class="row justify-content-center">
    <div class="col-md-9">
        <div class="card p-3">
            <h5 class="card-title">User Informations</h5>

            <table class="table table-striped">
                <tr>
                    <td>Username</td>
                    <td>@Model.UserName</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>@Model.City</td>
                </tr>
            </table>
        </div>
    </div>
</div>