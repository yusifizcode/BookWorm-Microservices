@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">

    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">My payment history</h5>

                @if (Model.Any())
                {

                    <table class="table table-striped table-bordered">

                        <tr>
                            <th>Order (payment) No</th>
                            <th>Purchase date</th>
                            <th>Details</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id</td>
                                <td>@item.CreatedTime.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">

                                        <tr>
                                            <th>Course Name</th>
                                            <th>Course Price</th>
                                        </tr>
                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td>$@orderItem.Price</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>

                }
                else
                {
                    <div class="alert alert-info">There are no courses you have purchased.</div>
                }
            </div>
        </div>
    </div>
</div>