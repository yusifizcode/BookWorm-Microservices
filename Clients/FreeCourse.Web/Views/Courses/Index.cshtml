@model List<CourseViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Create Course</a>
                @if (Model.Any())
                {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Course Name</th>
                            <th>Course Price</th>
                            <th>Course Duration</th>
                            <th>Course Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td><img width="72" src="@course.Picture" class="img-thumbnail" /></td>
                                <td>@course.Name</td>
                                <td>@course.Price</td>
                                <td>@course.Feature.Duration</td>
                                <td>@course.Category.Name</td>
                                <td>
                                    <a asp-controller="Courses" asp-action="Update" asp-route-id="@course.Id" class="btn btn-outline-warning btn-sm">Update</a>
                                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Courses are not found!</div>
                }
            </div>
        </div>
    </div>
</div>
